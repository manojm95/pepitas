<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.apptrovertscube.manojprabahar.myapplication.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/mainpagetv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainbuttonheight"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="Available Credit: 200"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttongreen"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/maintextheight"
        android:id="@+id/availcredit"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/mainpagetv"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainbuttonheight"
        android:text="Shop For Tomorrow"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttongreen"
        android:gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/maintextheight"
        android:id="@+id/shopfortmrw"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/availcredit"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainbuttonheight"
        android:background="@drawable/buttongreen"
        android:textSize="@dimen/maintextheight"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="Shop For Future"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:id="@+id/shopforftr"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/shopfortmrw"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
