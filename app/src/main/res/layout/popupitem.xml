<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"

    android:layout_width="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:id="@+id/cardll"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="3dp"
    app:cardElevation="3dp">
<LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/llpopupitem"
        android:orientation="vertical"

        android:layout_marginBottom="20dp"
        android:gravity="left"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:paddingLeft="15dp"
        android:textSize="19sp"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="100dp"
        android:textColor="#000000"
        android:text="sample  Text"
        android:layout_marginRight="20dp"
        android:gravity="left"
        android:id="@+id/popupitemtv"/>

    <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
        android:id="@+id/number_picker_horizontal"
        android:layout_width="90dp"
        android:gravity="right"
        android:layout_marginLeft="115dp"
        android:background="@drawable/ic_number_picker"
        android:layout_height="wrap_content"
        app:snp_buttonIconRight="@drawable/plusroundicon"
        app:snp_maxValue="9"
        app:snp_minValue="1"
        app:snp_value="1"
        app:snp_updateInterval="10"
        app:snp_buttonIconLeft="@drawable/minusicon"
        app:snp_valueMarginStart="8dp"
        android:layout_marginTop="10dp"
        app:snp_valueMarginEnd="8dp"
        android:orientation="horizontal"/>


</LinearLayout>
</android.support.v7.widget.CardView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"

        android:layout_height="wrap_content">

        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            android:padding="18dp"
            android:src="@drawable/ic_water" />
    </FrameLayout>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="35dp"
        android:text="Price"
        android:layout_gravity="right"
        android:textColor="#000000"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/popupprice"/>
</FrameLayout>